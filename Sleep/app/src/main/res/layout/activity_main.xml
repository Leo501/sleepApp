<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.leo.sleep.MainActivity">

    <LinearLayout
        android:id="@+id/tab_menu_ly"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tab_menu_sleep_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tab_menu_sleep"
                    style="@style/tab_menu_text"
                    android:text="@string/tab_menu_sleep_text"
                    android:drawableTop="@drawable/tab_menu_sleep"
                    />
                <TextView
                    android:id="@+id/tab_menu_sleep_num"
                    style="@style/tab_menu_oval_num"
                    android:layout_toRightOf="@+id/tab_menu_sleep"
                    android:text="1"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_menu_record_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tab_menu_record"
                    style="@style/tab_menu_text"
                    android:text="@string/tab_menu_record_text"
                    android:drawableTop="@drawable/tab_menu_record"
                    />
                <TextView
                    android:id="@+id/tab_menu_record_num"
                    style="@style/tab_menu_oval_num"
                    android:layout_toRightOf="@+id/tab_menu_record"
                    android:text="1"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_menu_user_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tab_menu_user"
                    style="@style/tab_menu_text"
                    android:text="@string/tab_menu_user_text"
                    android:drawableTop="@drawable/tab_menu_user"
                    />
                <TextView
                    android:id="@+id/tab_menu_user_num"
                    style="@style/tab_menu_oval_num"
                    android:layout_toRightOf="@+id/tab_menu_user"
                    android:text="1"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/tab_menu_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_grep"
        android:layout_above="@+id/tab_menu_ly"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/tab_menu_contend_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/tab_menu_divide"/>
</RelativeLayout>
