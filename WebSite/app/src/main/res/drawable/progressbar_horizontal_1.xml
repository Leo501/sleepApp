<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#4cffffff"
                android:centerY="0.75"
                android:endColor="#4cffffff"
                android:startColor="#4cffffff"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#ff2ec4b6"
                    android:centerY="0.75"
                    android:endColor="#ff2ec4b6"
                    android:startColor="#4f2ec4b6"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#ff537ff7"
                    android:centerY="0.75"
                    android:endColor="#ff537ff7"
                    android:startColor="#ffaec4fe"
                    />
            </shape>
        </clip>
    </item>
</layer-list>